    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Training",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train_model.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Testing MNIST",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_model.py",
            "args": ["-m", "./runs/LeNet5/LeNet5.pt", 
                "-n", "LeNet5", 
                "-d", "mnist"],
            "console": "integratedTerminal"
        },
        {
            "name": "Testing NOT-MNIST",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_model.py",
            "args": ["-m", "./runs/LeNet5/LeNet5.pt", 
                "-n", "LeNet5", 
                "-d", "mnist"],
            "console": "integratedTerminal"
        },
        {
            "name": "Fetch MNIST Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/utils/mnist-data.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Fetch NOT-MNIST Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/utils/not-mnist-data.py",
            "console": "integratedTerminal"
        }
    ]
}