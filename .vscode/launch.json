    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Training",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train_model.py",
            "args": [
                "-cfg",
                "./runconfig.json",
                "--outdir",
                "./runs/TEST"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Testing",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_model.py",
            "args": [
                "--mstate",
                "./runs/TEST/lenet5simplelldropout/LeNet5SimpleLLDropout.pt",
                "--mname",
                "LeNet5SimpleLLDropout",
                "--outdir",
                "./runs/TEST/lenet5simplelldropout",
                "--batch-size",
                "1"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Fetch MNIST Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/utils/mnist-data.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Fetch NOT-MNIST Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/utils/not-mnist-data.py",
            "console": "integratedTerminal"
        }
    ]
}