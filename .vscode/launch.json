    "version": "0.2.0",
    "configurations": [


        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Training",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train_model.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Training GPU",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train_model.py",
            "args": ["-cfg", "runconfig_cuda.json"],
            "console": "integratedTerminal"
        },
        {
            "name": "Testing",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_model.py",
            "args": ["-m", "./runs/2711_1603/LeNet5/LeNet5.pt", 
                "-n", "LeNet5", 
                "-d", "./data/mnist"],
            "console": "integratedTerminal"
        },
        {
            "name": "DATA",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/utils/mnist-data.py",            
            "console": "integratedTerminal"
        }
    ]
}